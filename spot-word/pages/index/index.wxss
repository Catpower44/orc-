.container{
  width: 100%;
  min-height: 100%;
  position: absolute;
  box-sizing: border-box;
  background: #F3F7FA;
}
.header-top{
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  padding-top: 120rpx;
  padding-bottom: 100rpx;
}
.content{
  width: 90%;
  background: #ffffff;
  border-radius: 10rpx;
  margin: 0 auto;
}
.content-title{
  width: 100%;
  padding-left: 30rpx;
  font-size: 36rpx;
  padding-top: 30rpx;
}
.content-view{
  padding-left: 30rpx;
  padding-top: 10rpx;
  padding-bottom: 30rpx;
  font-size: 30rpx;
  color: #808080;
}
.bottom-btn{
  background: #007AFF;
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #ffffff;
  text-align: center;
  border-radius: 50rpx;
  font-size: 38rpx;
  margin: 0 auto;
  margin-top: 200rpx;
}